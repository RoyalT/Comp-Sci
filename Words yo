import javax.swing.JOptionPane;


public class Word implements Comparable<Word> {
	private String s;
	private int c;
	private static int sortType = 0 ;//alpha, 1 freq, 2 size;
	public Word(String str) {
		// Someone gave me dis string
		s=str;
		c = 1;
	}
	
	
@Override
	public String toString()
{
	return "Word: "+ s +" Times: " + c ;
	
}
	public void increase(int q)
	{
		for(int x = 0;x<q;x++)
		{
		c++;
		}
	}
	public void increase()
	{
		c++;
		
	}
	public int freq()
	{
		return c;
	}
	
	public static void sortChoice()
	{
		String x = JOptionPane.showInputDialog("0 for alpha, 1 for count, 2 for size");
		sortType = Integer.parseInt(x);
	}
	@Override
	public int compareTo(Word manas) {
		
		if(sortType==0)
		{
		return s.compareToIgnoreCase(manas.getString());
		}
		
		if(sortType==1)
		{
			return this.freq()-manas.freq();
		}
		if(sortType==2)
		{
			return this.getString().length()-manas.getString().length();
		}
		return s.compareToIgnoreCase(manas.getString());
	}
	public String getString() {
		// TODO Auto-generated method stub
		return s;
	}
	public boolean equalTo(Word manas)
	{
		
		return s.equalsIgnoreCase(manas.getString());
	}
}
