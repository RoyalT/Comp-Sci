import java.io.*;
import java.util.*;
import java.util.Map.Entry;

import javax.swing.*;


public class Driver {
	static Map<String,Set<String>> wordmap = new HashMap();
	
		public static void main(String[]args){
			File f = new File("C:\\home\\student\\Home\\Downloads\\wordsEn.txt");
			inputFile(f);
			
			alphabetize q = new alphabetize();
			String str = q.keyMaker(userInteraction());
			
			if(!wordmap.containsKey(str)){
    	 		JOptionPane.showMessageDialog(null, "No matcherino");
    	 	}
			else{
				String message = "";
			
				Set<String> words  = wordmap.get(str);
				for(String r :words){
					message +=r;
					message +=" ";
				}
				
				JOptionPane.showMessageDialog(null, "Wordlist: " + message);
			}
			
		}

		private static String userInteraction() {
			return JOptionPane.showInputDialog("Enter Letters Yo");
		}

		private static void inputFile(File f) 
			{
			
			  Scanner in;
		      alphabetize q = new alphabetize();
              
              try
                      {
                   in = new Scanner(f);
                   
                     while(in.hasNext())
                           {
                    	 	String temp =in.next();
                    	 	String tempkey = q.keyMaker(temp);
                    	 	if(!wordmap.containsKey(tempkey)){
                    	 		wordmap.put(temp, Set<String>);
                    	 	}
                    	 	else{
                    	 		wordmap.get(tempkey).add(temp);
                    	 	}
                         
                           }
                           
                      }
              catch(IOException i)
                              {
                                      System.out.println("Error: " + i.getMessage());
                              }
			}
		
		
		
}
